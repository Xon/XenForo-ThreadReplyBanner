<?xml version="1.0" encoding="utf-8"?>
<addon addon_id="SV_ThreadReplyBanner" title="Thread Reply Banner" version_string="1.0.5" version_id="1000500" url="https://xenforo.com/community/resources/thread-reply-banner.4199/" install_callback_class="SV_ThreadReplyBanner_Installer" install_callback_method="install" uninstall_callback_class="SV_ThreadReplyBanner_Installer" uninstall_callback_method="uninstall">
